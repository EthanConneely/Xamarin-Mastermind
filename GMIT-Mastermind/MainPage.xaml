<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" BackgroundColor="SandyBrown" x:Class="GMIT_Mastermind.MainPage">

    <StackLayout Orientation="Vertical" HorizontalOptions="CenterAndExpand" VerticalOptions="Center" Margin="20" x:Name="Root">

        <Frame BackgroundColor="#CE8244" CornerRadius="10" Padding="4" HorizontalOptions="FillAndExpand">
            <Label Text="MASTERMIND" HorizontalOptions="Center" FontSize="Large" FontAttributes="Bold" TextColor="Black" />
        </Frame>

        <Frame BackgroundColor="#CE8244" CornerRadius="10" Padding="4" HorizontalOptions="FillAndExpand">
            <StackLayout x:Name="RoundsContainer" Orientation="Vertical" HorizontalOptions="Center" />
        </Frame>

        <Frame BackgroundColor="#CE8244" CornerRadius="10" Padding="4" HorizontalOptions="FillAndExpand">
            <StackLayout x:Name="PegsContainer" Orientation="Horizontal" HorizontalOptions="Center" Padding="4" />
        </Frame>

        <Button Text="Check" BackgroundColor="#CE8244" IsEnabled="False" CornerRadius="10" Padding="4" FontSize="Large" HorizontalOptions="FillAndExpand" Clicked="Checked_Clicked" x:Name="CheckButton" />

    </StackLayout>

</ContentPage>
